<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/contentFragment"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity"

        android:id="@+id/rel1"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp">

        <ImageView
            android:layout_width="159dp"
            android:layout_height="91dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="113dp"
            android:layout_marginBottom="628dp"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/logo_indigo" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="149dp"
            android:layout_marginBottom="614dp"
            android:gravity="center"
            android:text="Профиль"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="154dp"
            android:layout_marginBottom="498dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="58dp"
            android:layout_marginBottom="461dp"
            android:gravity="center"
            android:hint="ИМЯ"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="58dp"
            android:layout_marginBottom="415dp"
            android:gravity="center"
            android:hint="НОМЕР"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="188dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="98dp"
            android:layout_marginBottom="233dp"
            app:srcCompat="@drawable/drops" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="46dp"
            app:srcCompat="@drawable/hamburger" />

        <ImageView
            android:id="@+id/btnWallet"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="311dp"
            android:layout_marginBottom="46dp"
            app:srcCompat="@drawable/wwwalet" />

        <ImageView
            android:layout_width="342dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="593dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/topline" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="262dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="365dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/edits" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="97dp"
            android:layout_marginBottom="371dp"
            android:gravity="center"
            android:text="РЕДАКТИРОВАТЬ"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/btnExit"
            android:layout_width="217dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="311dp"
            app:srcCompat="@drawable/paybbalans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="152dp"
            android:layout_marginBottom="319dp"
            android:text="ВЫЙТИ"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>