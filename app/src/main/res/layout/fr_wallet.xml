
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:text="Баланс"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="30dp" />
            <ImageView
                android:id="@+id/Balans"
                android:layout_width="133dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/balance"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="50dp" />


            <TextView
                android:id="@+id/Bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:text="Бонус"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="MissingConstraints"
                />
            <ImageView
                android:layout_width="133dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/bonus"
                tools:ignore="MissingConstraints"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:padding="16dp"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:text="Кэшбэк"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="MissingConstraints"
                />
            <ImageView
                android:id="@+id/Cashback"
                android:layout_width="133dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/cashback"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/Referals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:text="Рефералы"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="133dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/referals"
                tools:ignore="MissingConstraints" />




        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/OplBonus"
            android:layout_width="342dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="49dp"
            app:srcCompat="@drawable/bonuss"
            tools:ignore="MissingConstraints"
            />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="154dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="оплатить бонусом"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            tools:ignore="MissingConstraints"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReplenish"
                android:layout_width="164dp"
                android:layout_height="43dp"
                android:textAlignment="center"
                android:background="@drawable/left"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="пополнить"
                android:textSize="18sp"
                android:textAllCaps="false"
                />
            <ImageView
                android:layout_width="75dp"
                android:layout_height="59dp"
                app:srcCompat="@drawable/wwalet"
                tools:ignore="MissingConstraints"
                />

            <Button
                android:id="@+id/btnBring"
                android:layout_width="164dp"
                android:layout_height="43dp"
                android:textAlignment="center"
                android:background="@drawable/right"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="вывести"
                android:textSize="18sp"
                android:textAllCaps="false"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnHistoryTrans"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    tools:ignore="MissingConstraints"
                    android:textColor="@color/white"
                    android:text="история транзакции"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnPay"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    tools:ignore="MissingConstraints"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:text="совершить платеж"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/btnCashHistory"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:text="кэшбэк истории"
                    android:textAllCaps="false"
                    />

                <Button
                    android:id="@+id/btnHistorySend"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:background="@drawable/background"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text="история переводов"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCridit"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="кредит"
                    android:textAllCaps="false"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    />

                <Button
                    android:id="@+id/btnSendFriend"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    tools:ignore="MissingConstraints"
                    android:textColor="@color/white"
                    android:text="отправить деньги"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false"
                    />

                <Button
                    android:id="@+id/btnExchange"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:text="обменять валюту"
                    android:textAllCaps="false"
                    />







                <Button
                    android:id="@+id/btnMyCard"
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/background"
                    android:gravity="center"
                    tools:ignore="MissingConstraints"
                    android:textColor="@color/white"
                    android:text="мои карты"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp">
            <Button
                android:id="@+id/btnPayobj"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/paybbalans"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingBottom="3dp"
                android:text="оплатить"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="96dp"
                android:layout_height="59dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/qr"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>